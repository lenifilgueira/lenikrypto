---
const { date } = Astro.props;

// Safely parse and check the date
let formatted = '';

if (date) {
  const parsed = new Date(date);
  formatted = parsed.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
    timeZone: 'UTC'
  });
}
---

{formatted && <p>{formatted}</p>}
