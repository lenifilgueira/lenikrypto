---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import '../styles/global.css';

const newsPosts = await getCollection('news');
const latestNews = newsPosts
  .sort((a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate))
  .slice(0, 3);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <h1>Welcome to lenikrypto</h1>
      <p>Exploring Bitcoin & Crypto — one block at a time.</p>

      <hr />

      <section>
        <h2>Start Your Bitcoin Journey</h2>
        <p>Begin with the fundamentals:</p>
        <p><a href="/bitcoin-101">Go to Bitcoin 101 →</a></p>
      </section>

      <hr />

      <section>
        <h2>Latest News</h2>
        <ul>
          {latestNews.map(post => (
            <li><a href={`/news/${post.slug}`}>{post.data.title}</a></li>
          ))}
        </ul>
        <p><a href="/news">View all news →</a></p>
      </section>
    </main>
    <Footer />
  </body>
</html>
