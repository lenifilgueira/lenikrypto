---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('bitcoin-101')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Bitcoin 101 | lenikrypto" description={SITE_DESCRIPTION} />
		<style>
			main {
				max-width: 720px;
				margin: 0 auto;
				padding: 2rem 1rem;
			}

			ul {
				list-style: none;
				padding: 0;
				margin: 0;
			}

			ul li {
				margin-bottom: 2rem;
			}

			ul li a {
				text-decoration: none;
				display: block;
			}

			.title {
				font-size: 1.5rem;
				color: var(--accent-color);
				margin: 0 0 0.25rem 0;
			}

			.date {
				font-size: 0.9rem;
				color: rgb(var(--gray));
				margin: 0;
			}

			ul li a:hover .title,
			ul li a:hover .date {
				color: rgba(255, 122, 0, 0.8);
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h1>Bitcoin 101</h1>
			<p>Start learning about Bitcoin the posts below. They're, written in a "ELI5" beginner-friendly manner. However, if there's something you can think is out of your grasp. Feel free to <a href="mailto:lenikrypto@gmail.com">reach out</a>.</p>

			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/bitcoin-101/${post.id}/`}>
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
